name: Rust

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]

env:
  CARGO_TERM_COLOR: always

jobs:
  build:

    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v4
      with:
        submodules: 'true'
    - name: Build
      run: cargo build --features nif

    - name: Run tests
      env:
        RISC0_DEV_MODE: 'true'
      run: cargo test --verbose
